<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackback"
    android:weightSum="1"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:weightSum="2"
            android:orientation="vertical">


            <ImageView

                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:src="@drawable/leeeee"
                android:layout_width="150dp"
                android:layout_height="160dp" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Miraj Traders"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="46sp"
                android:textStyle="bold"
                app:fontFamily="cursive" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/them"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="4">

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:text="admin"
                    android:inputType="text"
                    android:textColor="#ffffff"
                    android:padding="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableTint="#ffffff"
                    android:textColorHint="#ECECEC"
                    android:drawableLeft="@drawable/usrusr"
                    android:drawablePadding="16dp" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textColor="#ffffff"
                    android:inputType="textPassword"
                    android:drawableTint="#ffffff"
                    android:textColorHint="#ECECEC"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"

                    android:text="1234"
                    android:padding="12dp"
                    android:drawableLeft="@drawable/lockers"
                    android:drawablePadding="16dp" />

                <Button
                    android:id="@+id/btn_sbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:weightSum="3" />
d
            </LinearLayout>




        </LinearLayout>



</ScrollView>


</LinearLayout>